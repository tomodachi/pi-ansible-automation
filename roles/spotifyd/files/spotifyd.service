[Unit]
Description=spotifyd
Documentation=https://github.com/Spotifyd/spotifyd
Wants=sound.target
After=sound.target
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/local/bin/spotifyd --config-path /etc/spotifyd.conf --no-daemon

User=spotifyd
Group=spotifyd

Restart=always
RestartSec=12

[Install]
WantedBy=multi-user.target
